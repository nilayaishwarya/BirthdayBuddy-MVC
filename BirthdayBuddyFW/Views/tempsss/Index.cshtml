    <script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
    <script type="text/javascript">
        $(function () {
            //Remove the dummy row if data present.
            if ($("#tblBuddyInfoes tr").length > 2) {
                $("#tblBuddyInfoes tr:eq(1)").remove();
            } else {
                var row = $("#tblBuddyInfoes tr:last-child");
                row.find(".Edit").hide();
                row.find(".Delete").hide();
                row.find("span").html('&nbsp;');
            }
        });

        function AppendRow(row, NAME, BIRTHDAY, BUDDYNAME) {
            //Bind CustomerId.
            //$(".ID", row).find("span").html(ID);

            //Bind Name.
            $(".NAME", row).find("span").html(NAME);
            $(".NAME", row).find("input").val(NAME);

            //Bind BIRTHDAY.
            $(".BIRTHDAY", row).find("span").html(BIRTHDAY);
            $(".BIRTHDAY", row).find("input").val(BIRTHDAY);

            $(".BUDDYNAME", row).find("span").html(BUDDYNAME);
            $(".BUDDYNAME", row).find("input").val(BUDDYNAME);

            row.find(".Edit").show();
            row.find(".Delete").show();
            $("#tblBuddyInfoes").append(row);
        };

        //Add event handler.
        $("body").on("click", "#btnAdd", function () {
            var txtNAME = $("#txtNAME");
            var txtBIRTHDAY = $("#txtBIRTHDAY");
            var txtBUDDYNAME = $("#txtBUDDYNAME");
            $.ajax({
                type: "POST",
                url: "/Home/InsertBuddy",
                data: '{NAME: "' + txtNAME.val() + '", BIRTHDAY: "' + txtBIRTHDAY.val() + '", BUDDYNAME: "' + txtBUDDYNAME.val() + '"}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    var row = $("#tblBuddyInfoes tr:last-child");
                    if ($("#tblBuddyInfoes tr:last-child span").eq(0).html() != "&nbsp;") {
                        row = row.clone();
                    }
                    AppendRow(row, r.ID, r.NAME, r.BIRTHDAY, r.BUDDYNAME);
                    txtNAME.val("");
                    txtBIRTHDAY.val("");
                    txtBUDDYNAME.val("");
                }
            });
        });

